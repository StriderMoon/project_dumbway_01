<html>
  <head>
    <title>Blog Page</title>
    <link rel="stylesheet" href="/CSS/blogs.css" />
  </head>
  <body>
    <nav>
      <div class="nav-left">
        <ul>
          <li>
            <img src="/icon/logo.png" alt="logo" />
          </li>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a class="active" href="/blog">Blog</a>
          </li>
        </ul>
      </div>
      <div class="nav-right">
        <a href="/contact">Contact</a>
      </div>
    </nav>
    
    <div class="blog">
      <div class="blog-form">
        <div class="form-container">
          <form 
            {{!-- onsubmit="addBlog(event)" --}}
            method="post"
            action="/addblog"
          >
            <h1>Create Post Blog</h1>
            <div>
              <label for="input-blog-title">Title</label>
              <input type="text" name="title" id="input-blog-title" />
            </div>
            <div>
              <label for="input-blog-content">Content</label>
              <textarea name="content" id="input-blog-content"></textarea>
            </div>
            <div>
              <label>File Upload</label>
              <div class="input-blog-image-group">
                <label for="input-blog-image">
                  <p>Attach Files</p>
                  <img src="/icon/pin-file.png" />
                </label>
                <input type="file" id="input-blog-image" hidden />
              </div>
            </div>
            <div class="button-group">
              <button type="submit">Post Blog</button>
            </div>
          </form>
            
        </div>
      </div>
      <hr />
      <div id="contents" class="blog-list">
        <!-- dynamic content would be here -->
        {{#each data}}
        <div class="blog-list-item">
          <div class="blog-image">
            <img src="/image/blog-img-detail.png" alt="" />
          </div>
          <div class="blog-content">
            <div class="btn-group">
              <button class="btn-edit">Edit Post</button>
              <button class="btn-post">Delete Post</button>
            </div>
            <h1>
              <a href="blog-detail">
                {{this.title}}
                </a>
            </h1>
            <div class="detail-blog-content">
              {{this.createdAt}} | {{this.author}}
            </div>
            <p>
              {{this.content}}
            </p>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </body>
  <script src="/Js/blogs.js"></script>
</html>